<Window x:Class="AdaptivBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdaptivBot"
        mc:Ignorable="d"
        Title="Adaptiv Bot Version 0.0" Height="800" Width="800"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="SingleBorderWindow"
        Loaded="MainWindow_OnLoaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Slider.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopUpBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.Resources>
            <Style x:Key="BotButtonFramework"
                   TargetType="{x:Type  FrameworkElement}">
                <Setter Property="Button.Width" Value="200"/>
                <Setter Property="Button.Height" Value="30"/>
                <Setter Property="Button.FontSize" Value="11"/>
                <Setter Property="Button.VerticalAlignment" Value="Center"/>
            </Style>
            <Style x:Key="BotButton" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="15" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock
            Style="{DynamicResource MaterialDesignHeadlineTextBlock}"
            Foreground="{DynamicResource SecondaryAccentBrush}">
            <Grid.Row>1</Grid.Row>
            <Grid.Column>1</Grid.Column>
            <Grid.ColumnSpan>3</Grid.ColumnSpan>
            <TextBlock.Text>Adaptiv Bot</TextBlock.Text>
        </TextBlock>

        <Image HorizontalAlignment="Center">
            <Grid.Row>1</Grid.Row>
            <Grid.RowSpan>3</Grid.RowSpan>
            <Grid.Column>3</Grid.Column>
            <Grid.ColumnSpan>3</Grid.ColumnSpan>
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/robot-9.png" />
            </Image.Source>
        </Image>

        <StackPanel>
            <Grid.Row>3</Grid.Row>
            <Grid.RowSpan>7</Grid.RowSpan>
            <Grid.Column>1</Grid.Column>
            <Grid.ColumnSpan>3</Grid.ColumnSpan>
            <!--<Button Style="{StaticResource MaterialDesignRaisedDarkButton}"></Button>-->
            <materialDesign:Card>
                <materialDesign:Card.Margin>0,0,0,15</materialDesign:Card.Margin>
                <materialDesign:Card.UniformCornerRadius>6</materialDesign:Card.UniformCornerRadius>
                <TextBox Name="txtUserName"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.FloatingOffset="-70,-12"
                         Padding="0,-5,0,0">
                    <TextBox.HorizontalContentAlignment>Center</TextBox.HorizontalContentAlignment>
                    <TextBox.VerticalContentAlignment>Center</TextBox.VerticalContentAlignment>
                    <TextBox.Height>40</TextBox.Height>
                    <TextBox.FontSize>14</TextBox.FontSize>
                    <materialDesign:HintAssist.Hint>User Name</materialDesign:HintAssist.Hint>
                    <materialDesign:HintAssist.FloatingScale>0.75</materialDesign:HintAssist.FloatingScale>
                </TextBox>
            </materialDesign:Card>

            <materialDesign:Card>
                <materialDesign:Card.Margin>0,0,0,15</materialDesign:Card.Margin>
                <materialDesign:Card.UniformCornerRadius>6</materialDesign:Card.UniformCornerRadius>
                <PasswordBox Name="txtPasswordBox" Padding="0,-5,0,0" materialDesign:HintAssist.FloatingOffset="-70,-12" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                    <PasswordBox.Height>40</PasswordBox.Height>
                    <PasswordBox.HorizontalContentAlignment>Center</PasswordBox.HorizontalContentAlignment>
                    <PasswordBox.VerticalContentAlignment>Center</PasswordBox.VerticalContentAlignment>
                    <materialDesign:HintAssist.Hint>Password</materialDesign:HintAssist.Hint>
                    <materialDesign:HintAssist.FloatingScale>0.75</materialDesign:HintAssist.FloatingScale>
                    <PasswordBox.PasswordChar>•</PasswordBox.PasswordChar>
                    <PasswordBox.FontSize>14</PasswordBox.FontSize>
                </PasswordBox>
            </materialDesign:Card>

            <ComboBox
                Name="LocaleCombo"
                Width="180"
                Margin="0,0,0,15"
                HorizontalContentAlignment="Center">
                <ComboBoxItem>Production</ComboBoxItem>
                <ComboBoxItem>Stress Environment</ComboBoxItem>
                <ComboBoxItem>T10</ComboBoxItem>
            </ComboBox>

            <CheckBox Name="chkBxRememberMe">
                <CheckBox.Margin>0,0,0,15</CheckBox.Margin>
                <CheckBox.HorizontalAlignment>Center</CheckBox.HorizontalAlignment>
                <CheckBox.Content>Remember Me</CheckBox.Content>
            </CheckBox>
        </StackPanel>

        <StackPanel>
            <Grid.Row>11</Grid.Row>
            <Grid.RowSpan>9</Grid.RowSpan>
            <Grid.Column>1</Grid.Column>
            <Grid.ColumnSpan>3</Grid.ColumnSpan>

            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="LawnGreen"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>
            <Separator>
                <Separator.VerticalAlignment>Top</Separator.VerticalAlignment>
                <Separator.Margin>0,0,0,10</Separator.Margin>
            </Separator>

            <TextBlock
                Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                Foreground="{DynamicResource SecondaryAccentBrush}">
                <TextBlock.VerticalAlignment>Bottom</TextBlock.VerticalAlignment>
                <TextBlock.FontWeight>Bold</TextBlock.FontWeight>
                <TextBlock.Text>Report Extraction</TextBlock.Text>
                <TextBlock.Margin>0,0,0,15</TextBlock.Margin>
            </TextBlock>

            <Button materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                    materialDesign:ShadowAssist.ShadowDepth="Depth5" 
                    Click="Button_Click">
                <Button.Margin>10,0,10,15</Button.Margin>
                <Button.Content>Risk View</Button.Content>
                <Button.FontSize>12</Button.FontSize>
                <Button.VerticalAlignment>Center</Button.VerticalAlignment>
            </Button>

            <Button materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                    materialDesign:ShadowAssist.ShadowDepth="Depth5">
                <Button.Margin>10,0,10,15</Button.Margin>
                <Button.Content>Customer Limit Utilisation</Button.Content>
                <Button.FontSize>12</Button.FontSize>
                <Button.VerticalAlignment>Center</Button.VerticalAlignment>
            </Button>

            <Button materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                    materialDesign:ShadowAssist.ShadowDepth="Depth5">
                <Button.Margin>10,0,10,15</Button.Margin>
                <Button.Content>Deal Risk Carriers</Button.Content>
                <Button.FontSize>12</Button.FontSize>
                <Button.VerticalAlignment>Center</Button.VerticalAlignment>
            </Button>

            <CheckBox
                HorizontalAlignment="Center">
                Override existing files
            </CheckBox>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="13"
            Grid.Column="7"
            Grid.ColumnSpan="7">
            <materialDesign:PopupBox
                Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                PlacementMode="BottomAndAlignRightEdges"
                ToolTip="Settings"
                HorizontalAlignment="Right"
                Height="40"
                Width="40"
                Margin="0,0,0,10">
                    <materialDesign:PopupBox.ToggleCheckedContent>
                        <materialDesign:PackIcon
                        Kind="Pencil"
                        Width="24"
                        Height="24" />
                    </materialDesign:PopupBox.ToggleCheckedContent>
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="DodgerBlue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>
                        <Button materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                            materialDesign:ShadowAssist.ShadowDepth="Depth5">
                            Risk View
                            <Button.Margin>15,0,0,15</Button.Margin>
                        </Button>
                        <Button materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                            materialDesign:ShadowAssist.ShadowDepth="Depth5">
                            Customer Limit Utilisation
                            <Button.Margin>15,0,0,15</Button.Margin>
                        </Button>
                        <Button materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                            materialDesign:ShadowAssist.ShadowDepth="Depth5">
                            Deal Risk Carriers
                            <Button.Margin>15,0,0,15</Button.Margin>
                        </Button>
                    </StackPanel>
                </materialDesign:PopupBox>

            <DockPanel>
                <TextBlock
                    Foreground="{StaticResource SecondaryAccentBrush}">
                    <TextBlock.Text>Logger</TextBlock.Text>
                    <TextBlock.FontSize>16</TextBlock.FontSize>
                    <TextBlock.FontWeight>Bold</TextBlock.FontWeight>
                    <TextBlock.Margin>0,6,6,0</TextBlock.Margin>
                    <TextBlock.VerticalAlignment>Top</TextBlock.VerticalAlignment>
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90"></RotateTransform>
                    </TextBlock.LayoutTransform>
                </TextBlock>

                <materialDesign:Card>
                    <materialDesign:Card.UniformCornerRadius>6</materialDesign:Card.UniformCornerRadius>
                    <RichTextBox>
                        <RichTextBox.MinHeight>120</RichTextBox.MinHeight>
                        <RichTextBox.Margin>5,5,5,5</RichTextBox.Margin>
                        <RichTextBox.Background>Transparent</RichTextBox.Background>
                        <RichTextBox.IsReadOnly>True</RichTextBox.IsReadOnly>
                        <RichTextBox.BorderThickness>0</RichTextBox.BorderThickness>
                    </RichTextBox>
                </materialDesign:Card>
            </DockPanel>

            <DockPanel 
                Margin="0,20,0,0">
                <TextBlock Foreground="{StaticResource SecondaryAccentBrush}">
                    <TextBlock.HorizontalAlignment>Right</TextBlock.HorizontalAlignment>
                    <TextBlock.VerticalAlignment>Top</TextBlock.VerticalAlignment>
                    <TextBlock.Text>Extracted Files</TextBlock.Text>
                    <TextBlock.FontSize>16</TextBlock.FontSize>
                    <TextBlock.FontWeight>Bold</TextBlock.FontWeight>
                    <TextBlock.Margin>0,6,6,0</TextBlock.Margin>
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90"></RotateTransform>
                    </TextBlock.LayoutTransform>
                </TextBlock>

                <materialDesign:Card>
                    <materialDesign:Card.UniformCornerRadius>6</materialDesign:Card.UniformCornerRadius>
                    <ListBox>
                        <ListBox.MinHeight>120</ListBox.MinHeight>
                        <ListBox.Margin>5,5,5,5</ListBox.Margin>
                        <ListBox.Background>Transparent</ListBox.Background>
                        <ListBox.BorderThickness>0</ListBox.BorderThickness>
                    </ListBox>
                </materialDesign:Card>
            </DockPanel>
        </StackPanel>

        <Border BorderBrush="{DynamicResource PrimaryHueDarkBrush}">
            <Border.BorderThickness>2</Border.BorderThickness>
            <Grid.Row>19</Grid.Row>
            <Grid.RowSpan>5</Grid.RowSpan>
            <Grid.Column>1</Grid.Column>
            <Grid.ColumnSpan>13</Grid.ColumnSpan>
        </Border>

        <WebBrowser Name="webBrowser">
            <Grid.Row>19</Grid.Row>
            <Grid.RowSpan>5</Grid.RowSpan>
            <Grid.Column>1</Grid.Column>
            <Grid.ColumnSpan>13</Grid.ColumnSpan>
            <WebBrowser.Margin>2</WebBrowser.Margin>
        </WebBrowser>
    </Grid>
</Window>